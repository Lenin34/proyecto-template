<div class="modal fade" id="modalStats" tabindex="-1" aria-labelledby="modalStatsLabel" aria-hidden="true">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header bg-info text-white">
				<h5 class="modal-title" id="modalStatsLabel">Estadísticas de Lectura</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row mb-4">
					<div class="col-md-3">
						<div class="card bg-light border-0">
							<div class="card-body text-center">
								<h6 class="text-muted mb-2">Total Lecturas</h6>
								<h3 class="mb-0 text-primary" id="statsTotalReads">0</h3>
							</div>
						</div>
					</div>
				</div>

				<div class="table-responsive">
					<table id="stats-table" class="table table-striped table-hover mt-3">
						<thead class="table-light">
							<tr>
								<th>Usuario</th>
								<th>Email</th>
								<th>Empresa</th>
								<th>Fecha Lectura</th>
							</tr>
						</thead>
						<tbody id="statsTableBody">
							<tr>
								<td colspan="4" class="text-center">Cargando datos...</td>
							</tr>
						</tbody>
					</table>
				</div>

				<!-- Paginación básica -->
				<nav aria-label="Navegación de estadísticas">
					<ul
						class="pagination justify-content-center mt-3" id="statsPagination"><!-- Generado por JS -->
					</ul>
				</nav>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
			</div>
		</div>
	</div>
</div>
