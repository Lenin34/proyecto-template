{% extends 'base.html.twig' %}

{% block title %}Thank You{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-body text-center">
            <h1 class="card-title mb-4">Thank You!</h1>
            <p class="card-text">Your form has been submitted successfully.</p>
            <p class="card-text">Form: <strong>{{ submission.formTemplate.name }}</strong></p>
            <p class="card-text">Submission Date: <strong>{{ submission.createdAt|date('F d, Y h:i A') }}</strong></p>
            
            <div class="mt-4">
                <a href="{{ path('app_user_forms_index', {'dominio': dominio}) }}" class="btn btn-primary">Back to Forms</a>
                
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_user_forms_my_submission_show', {'id': submission.id, 'dominio': dominio}) }}" class="btn btn-secondary">
                        View Submission Details
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}