        body { background: #f8f8f8; font-family: Arial, sans-serif; }
        .container { background: #fff; padding: 30px; border-radius: 10px; max-width: 500px; margin: 40px auto; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
