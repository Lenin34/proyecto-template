<div class="modal fade" id="modalNewForm" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content modal-form">
			<div class="modal-header">
				<h5 class="modal-title">
					<i class="fas fa-plus-circle me-2"></i>Crear Nuevo Formulario
				</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form id="formNewForm" class="needs-validation" novalidate>
					<div class="mb-3">
						{{ form_label(form.name, 'Nombre del Formulario', {'label_attr': {'class': 'form-label'}}) }}
						<span class="text-danger">*</span>
						{{ form_widget(form.name, {'id': 'new_name', 'attr': {'class': 'form-control', 'placeholder': 'Ej. Encuesta de Satisfaccion', 'required': 'required'}}) }}
						<div class="invalid-feedback">Por favor ingrese un nombre.</div>
					</div>

					<div class="mb-3">
						{{ form_label(form.description, 'Descripcion', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(form.description, {'id': 'new_description', 'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Describe el proposito de este formulario...'}}) }}
					</div>

					<div class="mb-3">
						<label for="new_companyIds" class="form-label">
							<i class="fas fa-building me-1"></i>Empresas Autorizadas
						</label>
						{{ form_widget(form.companies, {'id': 'new_companyIds', 'attr': {'class': 'form-select select2-modal', 'style': 'width: 100%;', 'data-placeholder': 'Seleccionar empresas (vacio = todas)'}}) }}
						<div class="form-text text-muted small mt-1">
							<i class="fas fa-info-circle me-1"></i>Dejar vacio para permitir acceso a todas las empresas.
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
					<i class="fas fa-times me-2"></i>Cancelar
				</button>
				<button type="button" class="btn btn-success" id="btnSaveNewForm">
					<i class="fas fa-save me-2"></i>Guardar
				</button>
			</div>
		</div>
	</div>
</div>
