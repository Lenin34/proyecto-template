{# Modal de Ver Región #}
<div class="modal fade" id="modalShowRegion" tabindex="-1" aria-labelledby="modalShowRegionLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content modal-form">
			<div class="modal-header">
				<h5 class="modal-title" id="modalShowRegionLabel">
					<i class="fas fa-map-marker-alt me-2"></i>
					Detalles de la Región
				</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row g-3">
					<div class="col-12">
						<label class="form-label">Nombre</label>
						<input type="text" id="showRegionName" class="form-control form-control-dark" readonly>
					</div>
					<div class="col-12">
						<label class="form-label">Estado</label>
						<input type="text" id="showRegionStatus" class="form-control form-control-dark" readonly>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
					<i class="fas fa-times me-2"></i>
					Cerrar
				</button>
			</div>
		</div>
	</div>
</div>
